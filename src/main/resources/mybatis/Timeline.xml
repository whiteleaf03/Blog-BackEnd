<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.whiteleaf03.blogbackend.mapper.TimelineMapper">
    <insert id="addTimeline" parameterType="cn.whiteleaf03.blogbackend.entity.Timeline">
        insert into blog.timeline (date, event) VALUE (#{date}, #{event});
    </insert>

    <select id="queryAllTimeline" resultType="cn.whiteleaf03.blogbackend.entity.Timeline">
        select `date`, `event`
        from blog.timeline
        order by `date`;
    </select>
</mapper>